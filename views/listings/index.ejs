<% layout("/layouts/boilerplate") %>

    <body>
        <style>
            .filters {
                display: flex;
                flex-wrap: wrap;
            }

            .filter {
                margin: 1rem;
                text-align: center;
                opacity: 0.7;
            }

            .filter:hover {
                opacity: 1;
                cursor: pointer;
            }

            .form-check {
                border: 1px solid black;
                border-radius: 1rem;
                padding: 1rem;
            }

            .tax-info {
                display: none;
            }
        </style>
        <div class="filters">
            <div class="filter">
                <div><i class="fa-solid fa-umbrella-beach"></i></div>
                <p>Beach</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-cow"></i></div>
                <p>Farms</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-house"></i></div>
                <p>Rooms</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-tree"></i></div>
                <p>Islands</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-square-parking"></i></div>
                <p>National park</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-landmark"></i></div>
                <p>Historical house</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-truck-fast"></i></div>
                <p>Shopping mall</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-camera-retro"></i></div>
                <p>Stedio</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-shirt"></i></div>
                <p>Cloth shop</p>
            </div>
            <div class="form-check form-switch form-check-reverse filter">
                <input class="form-check-input toggle" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                <label class="form-check-label" for="flexSwitchCheckDefault">Price after taxes</label>
            </div>
        </div>
        <div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-2">
            <%for(let listing of listings){%>
                <a href="/listings/<%= listing._id %>" class="card-link">
                    <div class="card col">
                        <img src="<%=listing.image.url%>" class="card-img-top" alt="...">
                        <div class="card-img-overlay"></div>
                        <div class="card-body">
                            <p class="card-text">
                                <b>
                                    <%=listing.title%>
                                </b>
                                <br>
                                &#8377;<%=listing.price?.toLocaleString()%> / night <i class="tax-info"> +18%GST</i>
                            </p>
                        </div>
                    </div>
                </a>
                <%}%>
        </div>
    </body>
    <script>
        let togglebtn = document.getElementById("flexSwitchCheckDefault");
        togglebtn.addEventListener("click", () => {
            let tax = document.getElementsByClassName("tax-info");
            for (info of tax) {
                if (info.style.display != "none") {
                    info.style.display = "inline";
                } else {
                    info.style.display = "none";
                }
            }
        })
    </script>